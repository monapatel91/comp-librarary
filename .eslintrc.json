{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {},
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": false
      },
      "plugins": ["typescript-sort-keys"],
      "rules": {
        "typescript-sort-keys/interface": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {
        "react/jsx-sort-props": "error"
      }
    }
  ]
}
